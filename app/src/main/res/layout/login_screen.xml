<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/FTText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_medium"
            android:gravity="center_horizontal"
            android:paddingLeft="10dp"
            android:text="@string/fitness_together"
            android:textColor="#000000"
            android:textSize="32sp" />

        <TextView
            android:id="@+id/LoginSign"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:fontFamily="@font/roboto_medium"
            android:gravity="center_horizontal"
            android:text="Вход"
            android:textColor="#FF8C00"
            android:textSize="20sp" />

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/LoginInput"
            android:layout_width="269dp"
            android:layout_height="53dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/registration_output"
            android:fontFamily="@font/roboto_light"
            android:hint="@string/login"
            android:inputType="text"
            android:paddingStart="20sp"
            android:textAlignment="viewStart"
            android:textColor="#848282"
            android:textColorHint="#848282"
            android:textSize="20sp" />

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/PasswordField"
            android:layout_width="269dp"
            android:layout_height="53dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/registration_output"
            android:fontFamily="@font/roboto_light"
            android:hint="@string/passwordSign"
            android:inputType="datetime|date"
            android:paddingStart="20sp"
            android:textAlignment="viewStart"
            android:textColor="#848282"
            android:textColorHint="#848282"
            android:textSize="20sp" />

        <Button
            android:id="@+id/Next"
            android:layout_width="269dp"
            android:layout_height="80dp"
            android:layout_marginTop="40dp"
            android:backgroundTint="#FF8C00"
            android:text="@string/enter"
            android:textSize="20dp" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>